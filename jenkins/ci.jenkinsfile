pipeline {
    agent {
        label 'master'
    }
    triggers {
        githubPush()
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '7'))
        skipDefaultCheckout(true)
        disableConcurrentBuilds()
        timeout (time: 1, unit: 'MINUTES')
        timestamps()
    }
    parameters {
        string(name: 'BRANCH_NAME', defaultValue: 'main', description: '')
    }
    stages {
        stage('Sanity Check') {
            steps {
                script{
                   sanity_check() 
                }
            }
        }
        stage ('Checkout') {
            steps {
                dir("${WORKSPACE}/code") {
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: "*/${params.BRANCH_NAME}"]],
                        doGenerateSubmoduleConfigurations: false,
                        extensions: [[$class: 'LocalBranch']],
                        submoduleCfg: [],
                        userRemoteConfigs: [[
                        url: 'https://github.com/evf1981/jenkins-weather-app-project',
                        credentialsId: 'github-auth'
                        ]]
                    ])
                }
            }
        }
        stage('SonarQube Analysis') {
            steps {
                dir("${WORKSPACE}/code") {
                    script {
                        withSonarQubeEnv('SonarScanner') {
                            // sh "sonar-scanner"
                            sh "sonar-scanner --version"
                        }
                    }
                }
            }
        }
        stage('Building Auth') {
            steps {
                script{
                    dir("${WORKSPACE}/code/code/auth") { 
                        sh """
                           cat Dockerfile
                           sudo docker images
                        """
                    }
                }
            }
        }
        stage('Building DB') {
            steps {
                script{
                    dir("${WORKSPACE}/code/code/db") { 
                        sh """
                           cat Dockerfile
                        """
                    }
                }
            }
        }
        stage('Building REDIS') {
            steps {
                script{
                    dir("${WORKSPACE}/code/code/redis") { 
                        sh """
                           cat Dockerfile
                           sudo docker images
                        """
                    }
                }
            }
        }
        stage('Building UI') {
            steps {
                script{
                    dir("${WORKSPACE}/code/code/ui") { 
                        sh """
                           cat Dockerfile
                           sudo docker images
                        """
                    }
                }
            }
        }
        stage('Building WEATHER') {
            steps {
                script{
                    dir("${WORKSPACE}/code/code/weather") { 
                        sh """
                           cat Dockerfile
                           sudo docker images
                        """
                    }
                }
            }
        }
        stage('Pushing Auth') {
            steps {
                script{
                    dir("${WORKSPACE}/code/code/auth") { 
                        sh """
                           sudo docker images
                        """
                    }
                }
            }
        }
        stage('Pushing DB') {
            steps {
                script{
                    dir("${WORKSPACE}/code/code/db") { 
                        sh """
                           sudo docker images
                        """
                    }
                }
            }
        }
        stage('Pushing REDIS') {
            steps {
                script{
                    dir("${WORKSPACE}/code/code/redis") { 
                        sh """
                           sudo docker images
                        """
                    }
                }
            }
        }
        stage('Pushing UI') {
            steps {
                script{
                    dir("${WORKSPACE}/code/code/ui") { 
                        sh """
                           sudo docker images
                        """
                    }
                }
            }
        }
        stage('Pushing WEATHER') {
            steps {
                script{
                    dir("${WORKSPACE}/code/code/weather") { 
                        sh """
                           sudo docker images
                        """
                    }
                }
            }
        }
        stage('Clean Up') {
            steps {
                script {
                    dir("${WORKSPACE}/code") {
                        sh """
                            sudo rm -rf *
                        """
                    }
                }
            }
        }
    }
    post {
        success {
            slackSend color: '#2EB67D',
            channel: 'a1-session', 
            message: "*Jenkins Weather App Project Build Status*" +
            "\n Project Name: Jenkins Weather App" +
            "\n Job Name: ${env.JOB_NAME}" +
            "\n Build number: ${currentBuild.displayName}" +
            "\n Build Status : *SUCCESS*" +
            "\n Build url : ${env.BUILD_URL}"
        }
        failure {
            slackSend color: '#E01E5A',
            channel: 'a1-session',  
            message: "*Jenkins Weather App Project Build Status*" +
            "\n Project Name: Jenkins Weather App" +
            "\n Job Name: ${env.JOB_NAME}" +
            "\n Build number: ${currentBuild.displayName}" +
            "\n Build Status : *FAILED*" +
            "\n Action : Please check the console output to fix this job IMMEDIATELY" +
            "\n Build url : ${env.BUILD_URL}"
        }
        unstable {
            slackSend color: '#ECB22E',
            channel: 'a1-session', 
            message: "*Jenkins Weather App Project Build Status*" +
            "\n Project Name: Jenkins Weather App" +
            "\n Job Name: ${env.JOB_NAME}" +
            "\n Build number: ${currentBuild.displayName}" +
            "\n Build Status : *UNSTABLE*" +
            "\n Action : Please check the console output to fix this job IMMEDIATELY" +
            "\n Build url : ${env.BUILD_URL}"
        }   
    }
}
        
def sanity_check() {
    if (params.BRANCH_NAME.isEmpty()){
       echo "The parameter BRANCH_NAME is not set"
       sh 'exit 2'
   } 
}      